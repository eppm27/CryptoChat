  "repository": {
    "type": "git",
    "url": "https://github.com/YourUsername/crypto-chat-project.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@testing-library/react": "^16.3.0",
    "concurrently": "^8.2.2",
    "happy-dom": "^18.0.1",
    "jest": "^29.7.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  }
